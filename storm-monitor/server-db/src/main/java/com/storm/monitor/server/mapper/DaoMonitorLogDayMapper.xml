<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.storm.monitor.server.dao.DaoMonitorLogDayMapper" > 
    <!-- Result Map-->
    <resultMap id="BaseResultMap" type="com.storm.monitor.server.model.DaoMonitorLogDay" >
        <result column="log_time" property="logTime" javaType="java.sql.Timestamp"/>
        <result column="machine_address" property="machineAddress"/>
        <result column="service_name" property="serviceName"/>
        <result column="success_count" property="successCount"/>
        <result column="failure_count" property="failureCount"/>
        <result column="avg_elapsed" property="avgElapsed"/>
        <result column="max_elapsed" property="maxElapsed"/>
        <result column="min_elapsed" property="minElapsed"/>
        <result column="lastest_error_msg" property="lastestErrorMsg"/>
    
    </resultMap>
       
                       
    <!-- dao_monitor_log_day table all fields -->
    <sql id="Base_Column_List" >
        log_time ,machine_address ,service_name ,success_count ,failure_count ,avg_elapsed ,max_elapsed ,min_elapsed ,lastest_error_msg 
    </sql>
   
   
    <!-- 鏌ヨ鏉′欢 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="logTimeBegin != null" >
                and log_time &gt;=  #{logTimeBegin}
            </if>
            <if test="logTimeEnd != null" >
                and log_time &lt;  #{logTimeEnd}
            </if>
            <if test="successCount != null" >
                and success_count =  #{successCount}
            </if>

            <if test="failureCount != null" >
                and failure_count =  #{failureCount}
            </if>

            <if test="avgElapsed != null" >
                and avg_elapsed =  #{avgElapsed}
            </if>

            <if test="maxElapsed != null" >
                and max_elapsed =  #{maxElapsed}
            </if>

            <if test="minElapsed != null" >
                and min_elapsed =  #{minElapsed}
            </if>

            <if test="lastestErrorMsg != null and lastestErrorMsg != ''" >
                and lastest_error_msg =  #{lastestErrorMsg}
            </if>
        </trim>
    </sql>
   

    <!-- 鎻掑叆璁板綍 -->
    <insert id="addDaoMonitorLogDay" parameterType="Object" >
        insert into dao_monitor_log_day(log_time,machine_address,service_name,success_count,failure_count,avg_elapsed,max_elapsed,min_elapsed,lastest_error_msg)
        values(#{logTime},#{machineAddress},#{serviceName},#{successCount},#{failureCount},#{avgElapsed},#{maxElapsed},#{minElapsed},#{lastestErrorMsg})
    </insert>
    
    <insert id="addDaoMonitorLogDayBySelect">
        insert into 
        dao_monitor_log_day(log_time,machine_address,service_name,success_count,failure_count,avg_elapsed,max_elapsed,min_elapsed)
        SELECT 
        #{logTime} as log_time,
        machine_address,
        service_name,
        sum(success_count) as success_count,
        sum(failure_count) as failure_count,
        sum(avg_elapsed*success_count)/sum(success_count) as avg_elapsed,
        max(max_elapsed) as max_elapsed,
        min(min_elapsed) as min_elapsed
        FROM 
        dao_monitor_log_hour
        where 
        log_time between #{logBeginTime} and #{logEndTime}
        group by machine_address,service_name
    </insert>

    <!-- 鏍规嵁id锛屼慨鏀硅褰� -->  
    <update id="updateDaoMonitorLogDay" parameterType="Object" >
        update dao_monitor_log_day set log_time=#{logTime},machine_address=#{machineAddress},service_name=#{serviceName},success_count=#{successCount},failure_count=#{failureCount},avg_elapsed=#{avgElapsed},max_elapsed=#{maxElapsed},min_elapsed=#{minElapsed},lastest_error_msg=#{lastestErrorMsg} where log_time=#{logTime}
    </update>
 
    <!-- 淇敼璁板綍锛屽彧淇敼鍙笉涓虹┖鐨勫瓧娈� -->
    <update id="updateDaoMonitorLogDayBySelective" parameterType="Object" >
        update dao_monitor_log_day set 
        <trim  suffixOverrides="," >
            <if test="successCount != null  ">
                success_count=#{successCount},
            </if>
            <if test="failureCount != null  ">
                failure_count=#{failureCount},
            </if>
            <if test="avgElapsed != null  ">
                avg_elapsed=#{avgElapsed},
            </if>
            <if test="maxElapsed != null  ">
                max_elapsed=#{maxElapsed},
            </if>
            <if test="minElapsed != null  ">
                min_elapsed=#{minElapsed},
            </if>
            <if test="lastestErrorMsg != null  ">
                lastest_error_msg=#{lastestErrorMsg},
            </if>
        </trim> where log_time=#{logTime}
    </update>

    <!-- 鍒犻櫎璁板綍 -->
    <delete id="deleteDaoMonitorLogDayById" parameterType="java.util.Date">
        delete 	from dao_monitor_log_day where log_time = #{id}
    </delete>

    <!--鏍规嵁鏌ヨ鏉′欢鍒犻櫎璁板綍-->
    <delete id="deleteDaoMonitorLogDayByCondition" parameterType="Object">
        delete 	from dao_monitor_log_day 
        <include refid="Example_Where_Clause"/>
    </delete>
 
    <!-- 鏍规嵁id鏌ヨDAO监控天汇总表 -->
    <select id="queryDaoMonitorLogDayById"  resultMap="BaseResultMap" parameterType="Object">
        select <include refid="Base_Column_List" /> 
        from dao_monitor_log_day where log_time = #{id}
    </select>

    <!-- 銆�DAO监控天汇总表銆� 鍒楄〃鎬绘暟-->
    <select id="queryDaoMonitorLogDayByCount" resultType="java.lang.Integer"  parameterType="Object">
        select count(1) from dao_monitor_log_day 
        <include refid="Example_Where_Clause"/>
    </select>
  	
    <!-- 鏌ヨ銆�DAO监控天汇总表銆戝垪琛� -->
    <select id="queryDaoMonitorLogDayByPage" resultMap="BaseResultMap"  parameterType="Object">
        select 
        <include refid="Base_Column_List"/>
        from dao_monitor_log_day
        <include refid="Example_Where_Clause"/>
        <if test="page.sortColumn != null and page.sortColumn != ''" >
            order by ${page.sortColumn} 
        </if>
        <if test="page.sortColumn != null and page.sortColumn != '' and page.orderBy!=null and page.orderBy!=''" >
            ${page.orderBy}
        </if>    
        limit ${page.begin},${page.length}
    </select>
    
    <select id="queryDaoMonitorLogDayBySQL" resultMap="BaseResultMap"  parameterType="String">
        ${sql}
    </select>
  	
</mapper>   
